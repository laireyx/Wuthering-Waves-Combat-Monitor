{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "strictNullChecks": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@common/*": ["./src/common/*"]
    }
  }
}
